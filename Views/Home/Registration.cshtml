@model OfficeBus.ViewModels.RegisterVM

@{
	ViewData["Title"] = "Registration";
}
<div class="card bg-light">
	<article class="card-body mx-auto" style="max-width: 400px;">
		<h4 class="card-title mt-3 text-center">Create Account</h4>
		<p class="text-center">Get started with your free account</p>
		<p>
			<a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i>   Login via Twitter</a>
			<a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i>   Login via facebook</a>
		</p>
		<p class="divider-text">
			<span class="bg-light">OR</span>
		</p>

		

		<form asp-action="Registration">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-user"></i> </span>
				</div>
				<input asp-for="Username"
					   class="form-control"
					   placeholder="Full name"
					   type="text">
				<br />
				<span asp-validation-for="Username"
					  class="text-danger">
				</span>
			</div> <!-- form-group// -->
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
				</div>
				<input class="form-control"
					   asp-for="Email"
					   placeholder="Email address"
					   type="email">
				<br />
				<span asp-validation-for="Email"
					  class="text-danger">
				</span>
			</div> <!-- form-group// -->
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-phone"></i> </span>
				</div>
				<select class="custom-select" style="max-width: 120px;">
					<option selected="">+971</option>
					<option value="1">+972</option>
					<option value="2">+198</option>
					<option value="3">+701</option>
				</select>
				<input asp-for="PhoneNumber"
					   class="form-control"
					   placeholder="Phone number"
					   type="text">
				<br />
				<span asp-validation-for="PhoneNumber"
					  class="text-danger">
				</span>
			</div> <!-- form-group// -->
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-building"></i> </span>
				</div>
				<select asp-for="JobType" class="form-control">
					<option selected=""> Select job type</option>
					<option>Designer</option>
					<option>Manager</option>
					<option>Accaunting</option>
				</select>
				<br />
				<span asp-validation-for="JobType"
					  class="text-danger">
				</span>
			</div> <!-- form-group end.// -->
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
				</div>
				<input asp-for="Password"
					   class="form-control"
					   placeholder="Create password"
					   type="password">
				<br />
				<span asp-validation-for="Password"
					  class="text-danger">
				</span>
			</div> <!-- form-group// -->
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
				</div>
				<input asp-for="ConfirmPassword"
					   class="form-control"
					   placeholder="Repeat password"
					   type="password">
				<br />
				<span asp-validation-for="ConfirmPassword"
					  class="text-danger">
				</span>
			</div> <!-- form-group// -->
			<div class="form-group">
				<input type="submit" value="Create Account" class="btn btn-primary" />
			</div> <!-- form-group// -->
			<p class="text-center">Have an account? <a href="">Log In</a> </p>
		</form>
	</article>
</div> <!-- card.// -->
@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

